<%- include('../partials/nav.ejs') %>  
<div class="container text-center mt-5">
  <h2>Edit details</h2>
  <div class="row form-container">
    <div class="col-md-6">
      <form
        action="/student/<%= student._id %>/edit"
        method="POST"
        class="form"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label
            >First name:*
            <input
              type="text"
              name="firstName"
              class="form-control mt-3"
              value="<%= student.firstName %>"
              required
            />
          </label>
        </div>
        <div class="form-group">
          <label
            >Last name:
            <input
              type="text"
              name="lastName"
              class="form-control mt-3"
              value="<%= student.lastName %>"
            />
          </label>
        </div>
        <div class="form-group">
          <label
            >Email:
            <input
              type="email"
              name="email"
              class="form-control mt-3"
              value="<%= student.email %>"
            />
          </label>
        </div>
        <div class="form-group">
          <label
            >Photo:
            <input
              type="file"
              name="imageUrl"
              class="form-control form-control-file mt-3"
              accept="image/png, image/jpg"
              value="<%= student.imageUrl %>"
            />
          </label>
        </div>
        <button type="submit" class="btn btn-info">Update</button>
      </form>
    </div>
  </div>
</div>
