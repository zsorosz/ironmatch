<%- include('../partials/nav.ejs') %>  
<div class="container text-center mt-5 form-ctn">
  <h2>Add a new student</h2>
  <div class="row form-container formCtn">
    <div>
      <form
        action="/student/new"
        method="POST"
        class="student-form"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label
            >First name:*
            <input
              type="text"
              name="firstName"
              class="form-control mt-3"
              required
            />
          </label>
        </div>
        <div class="form-group">
          <label
            >Last name:
            <input type="text" name="lastName" class="form-control mt-3" />
          </label>
        </div>
        <div class="form-group">
          <label
            >Email:
            <input type="email" name="email" class="form-control mt-3" />
          </label>
        </div>
        <div class="form-group">
          <label
            >Photo:
            <input
              id="formFile"
              type="file"
              name="imageUrl"
              class="form-control form-control-file mt-3"
              accept="image/png, image/jpg"
            />
          </label>
        </div>
        <button type="submit" class="btn btn-info mt-3">Create</button>
      </form>
    </div>
  </div>
</div>
