<main>
  <section class="manageClass">
    <button
      type="button"
      class="btn btn-info"
      onclick="window.location.href='/'"
    >
      Add a Student
    </button>
    <button type="button" class="btn btn-info">Send Survey</button>
    <button
      type="button"
      class="btn btn-info"
      onclick="window.location.href='/'"
    >
      Create random matches for lab work
    </button>
    <button
      type="button"
      class="btn btn-info"
      onclick="window.location.href='/'"
    >
      Create project teams
    </button>
  </section>
  <section class="myClass">
    <h1 class="mb-4">My class:</h1>
    <div class="allStudents">
      <% allStudents.forEach(student => { %>
      <div class="card" style="width: 18rem">
        <img
          src="<%- student.img %>"
          class="card-img-top"
          alt="student-image"
        />
        <div class="card-body">
          <h5 class="card-title"><%= student.firstName %></h5>
          <a href="#" class="btn btn-info">Edit</a>
        </div>
      </div>
      <% }) %>
    </div>
  </section>
</main>
